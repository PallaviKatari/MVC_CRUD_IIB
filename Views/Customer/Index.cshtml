@model dynamic
@{
    ViewData["Title"] = "Customers";
    var actionType = ViewBag.ActionType as string;
}

<h2>Customers</h2>

@if (actionType == "details" || actionType == "edit")
{
    var customer = Model as MVC_Demo.Models.Customer;
    if (actionType == "details")
    {
        <h3>Customer Details</h3>
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@customer.Id</dd>
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@customer.Name</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@customer.Email</dd>
        </dl>
        <a asp-action="Index" asp-route-id="" asp-route-actionType="" class="btn btn-secondary mt-2">Back to List</a>
    }
    else if (actionType == "edit")
    {
        <h3>Edit Customer</h3>
        <form asp-action="Edit" method="post">
            <input type="hidden" name="Id" value="@customer.Id" />
            <div class="form-group">
                <label>Name</label>
                <input name="Name" value="@customer.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input name="Email" value="@customer.Email" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary mt-2">Save</button>
        </form>
        <a asp-action="BackToList" class="btn btn-secondary mt-2">Back to List</a>

    }
}
else
{
    var customers = Model as List<MVC_Demo.Models.Customer>;
    <form asp-action="Create" method="post" class="mb-2">
        <input name="Name" placeholder="Name" class="form-control mb-1" />
        <input name="Email" placeholder="Email" class="form-control mb-1" />
        <button type="submit" class="btn btn-success mb-2">Add Customer</button>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in customers)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>@c.Email</td>
                    <td>
                        <form asp-action="Delete" method="post" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                            <input type="hidden" name="id" value="@c.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                        <a asp-action="Index" asp-route-id="@c.Id" asp-route-actionType="details" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Index" asp-route-id="@c.Id" asp-route-actionType="edit" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

Bootstrap classes
1. danger - red
2. warning - yellow
3. success - green
4. info - light blue
5. primary - blue
6. secondary - dark grey
7. light - light gray
